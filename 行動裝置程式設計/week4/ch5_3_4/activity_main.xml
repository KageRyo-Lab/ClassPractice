<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/LinearLayout1">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最喜歡的球類運動"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup android:id="@+id/radGroupBalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/radBasketBall"
            android:text="籃球"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF" />

        <RadioButton android:id="@+id/radFootBall"
            android:text="足球"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF"/>

        <RadioButton android:id="@+id/radBaseBall"
            android:text="棒球"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#0000FF"/>

    </RadioGroup>

    <TextView android:id="@+id/txtResult"
        android:text="顯示結果"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>