<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvPtName"       />
        <EditText
            android:id="@+id/etIdItName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/etItName"
            android:hint="@string/htItName"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvPtPrice" />
        <EditText
            android:id="@+id/etIdItPrice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/etItPrice"
            android:hint="@string/htItPrice"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btIdSvPref"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btPtBut1"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btIdChgPref"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btPtBut2"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btIdRestPref"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btPtBut3"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
